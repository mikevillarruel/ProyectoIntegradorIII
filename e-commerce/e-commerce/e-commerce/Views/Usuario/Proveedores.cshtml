@model List<e_commerce.Models.Usuario>
@{
    ViewBag.Title = "Proveedores";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">PROVEEDORES</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Información del Proveedor
            <a href="../Administrador/agregarProveedor" class="btn btn-info pull-right fa fa-plus">Añadir</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Empresa</th>
                            <th>E-mail</th>
                            <th>Contraseña</th>
                            <th>Accion</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>N°</th>
                            <th>Empresa</th>
                            <th>E-mail</th>
                            <th>Contraseña</th>
                            <th>Accion</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@(Model.IndexOf(item) + 1)</td>
                                <td>@item.Nombre</td>
                                <td>@item.Email</td>
                                <td>@item.Contrasenia</td>
                                <td>@Html.ActionLink("Editar", "modificarProveedor", new { id = item.Id })</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

