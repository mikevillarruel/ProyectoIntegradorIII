@model List<e_commerce.Models.Producto>
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">PRODUCTOS</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Detalle del Producto
            <a href="../Administrador/agregarProducto" class="btn btn-info pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Categoria</th>
                            <th>Precio</th>
                            <th>Accion</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>N°</th>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Categoria</th>
                            <th>Precio</th>
                            <th>Accion</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@(Model.IndexOf(item) + 1)</td>
                                <td>@item.Imagen</td>
                                <td>@item.Nombre</td>
                                <td>@item.Descripcion</td>
                                <td>@item.Categoria</td>
                                <td>@item.Precio</td>
                                <td>@Html.ActionLink("Editar", "modificarProducto", new { productoNombre = item.Nombre })</td>


                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>